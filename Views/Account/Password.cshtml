@model aspnetmvc_blog.Models.Views.ChangePasswordViewModel
@{
    ViewData["Title"] = "Update Password";
}
<form asp-action="Password">
    <h2>
        @ViewData["Title"]
        <input type="submit" value="Change" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">My Account</a>
    </h2>
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        Notice: 16 characters minimum, must have lower, upper case and number
        <button type="button" class="accept-policy close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">Close</span>
        </button>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="UserName" />
            <input type="hidden" asp-for="OldPassword" />
            <div class="form-group">
                <label asp-for="NewPassword" class="control-label"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmNewPassword" class="control-label"></label>
                <input asp-for="ConfirmNewPassword" class="form-control" />
                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
