@model aspnetmvc_blog.Models.Views.BlogDetailedViewModel
@{
    ViewData["Title"] = Model.BlogDisplay.Title;
}
<div class="row g-5 mt-1">
    <div class="col-md-8 mt-0">
        <article class="blog-post">
            <h2 class="blog-post-title mb-1">@Model.BlogDisplay.Title</h2>
            <strong class="d-inline-block mb-2 text-primary">@Model.BlogDisplay.Category</strong>
            <p class="blog-post-meta">@Model.BlogDisplay.BlogDate</p>
            @Model.BlogDisplay.Subtitle
            <hr>
            <img src="@Model.BlogDisplay.Image" class="img-fluid float-start mx-2" width="200" height="250" alt="thumbnail">
            <p>@Model.BlogDisplay.Content</p>
        </article>
    </div>
    <div class="col-md-4 mt-0">
        <div class="position-sticky" style="top: 2rem;">
            <div class="p-4 mb-3 bg-light rounded">
                <h4 class="fst-italic">About</h4>
                <p class="mb-0">This is a Blog site made using ASP.net core MVC pulling data from a nestjs api</p>
            </div>
            <div class="p-4">
                <h4 class="fst-italic">Archives</h4>
                <ol class="list-unstyled mb-0">
                    @foreach (var archive in Model.ArchiveList)
                    {
                        <li><a asp-controller="blog" asp-action="archive" asp-route-year="@archive.year" asp-route-month="@archive.month">@archive.name</a></li>
                    }
                </ol>
            </div>
            <div class="p-4">
                <h4 class="fst-italic">Elsewhere</h4>
                <ol class="list-unstyled">
                    <li><a href="https://reactjs-blog-alen456.vercel.app/">Same blog data in React</a></li>
                    <li><a href="https://nextjs-blog-alen456.vercel.app/">Same blog data in Next.js</a></li>
                </ol>
            </div>
        </div>
    </div>
</div>
