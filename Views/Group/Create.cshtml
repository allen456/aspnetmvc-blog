@model aspnetmvc_blog.Models.Group
@{
    ViewData["Title"] = "Create";
}
<form asp-action="Create">
    <h2>
        @ViewData["Title"]
        <input type="submit" value="Submit" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </h2>
    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group required">
                <label asp-for="GroupCode" class="control-label"></label>
                <input asp-for="GroupCode" class="form-control" required />
                <span asp-validation-for="GroupCode" class="text-danger"></span>
            </div>
            <div class="form-group required">
                <label asp-for="GroupDescription" class="control-label"></label>
                <input asp-for="GroupDescription" class="form-control" required />
                <span asp-validation-for="GroupDescription" class="text-danger"></span>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
